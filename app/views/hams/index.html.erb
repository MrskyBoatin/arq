<h1>Listing hams</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hams.each do |ham| %>
      <tr>
        <td><%= link_to 'Show', ham %></td>
        <td><%= link_to 'Edit', edit_ham_path(ham) %></td>
        <td><%= link_to 'Destroy', ham, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

